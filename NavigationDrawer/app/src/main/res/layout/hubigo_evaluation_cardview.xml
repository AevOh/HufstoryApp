<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@color/cardview_light_background"
        card_view:cardPreventCornerOverlap="false"
        card_view:cardElevation="0dp">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:columnCount="2">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/nickname"
                    android:text="아이디"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/date"
                    android:textSize="@dimen/hubigo_detail_text_size"
                    android:textColor="@color/hufstory_color"
                    android:text="2016.10.11"/>
            </LinearLayout>

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:columnCount="2">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/grade_satis"
                    android:layout_marginRight="30dp"
                    android:src="@drawable/hubigo_satisfaction_selector"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/content_satis"

                    android:src="@drawable/hubigo_satisfaction_selector"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="30dp"
                    android:textSize="@dimen/hubigo_detail_text_size"
                    android:text="성적"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/hubigo_detail_text_size"
                    android:text="수업"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp" />
            </GridLayout>

            <TextView
                android:layout_columnSpan="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/comment"
                android:textSize="@dimen/hubigo_detail_text_size"
                android:text="가장 기억에 남는가장 기억에 남는가장 기억에 남는가장 기억에 남는가장 기억에 남는가장 기억에 남는가장 기억에 남는"/>
        </GridLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
